<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import java.net.URL?>

<VBox alignment="CENTER" spacing="25" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ParticipantController">
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Header -->
    <Label text="Participant Dashboard" style="-fx-font-weight: bold; -fx-text-fill: #2a2a2a;">
        <font>
            <Font name="System Bold" size="28"/>
        </font>
    </Label>

    <!-- User Info Section -->
    <VBox spacing="12" style="-fx-background-color: #e8ecef; -fx-border-color: #d3d3d3; -fx-border-radius: 10; -fx-padding: 20;">
        <Label fx:id="welcomeLabel" text="Welcome, [User]" style="-fx-font-weight: bold;">
            <font>
                <Font size="20"/>
            </font>
        </Label>
        <Label fx:id="nomLabel" text="Nom: [Nom]">
            <font>
                <Font size="16"/>
            </font>
        </Label>
        <Label fx:id="prenomLabel" text="Prénom: [Prénom]">
            <font>
                <Font size="16"/>
            </font>
        </Label>
        <Label fx:id="emailLabel" text="Email: [Email]">
            <font>
                <Font size="16"/>
            </font>
        </Label>
        <Label fx:id="ageLabel" text="Âge: [Âge]">
            <font>
                <Font size="16"/>
            </font>
        </Label>
        <Label fx:id="roleLabel" text="Rôle: [Rôle]">
            <font>
                <Font size="16"/>
            </font>
        </Label>
    </VBox>

    <!-- Logout Button -->
    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-border-radius: 5;"/>

    <stylesheets>
        <URL value="@/ParticipantDashboard.css" />
    </stylesheets>
</VBox>