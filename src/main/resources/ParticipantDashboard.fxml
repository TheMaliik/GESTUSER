<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxWidth="733.0" prefHeight="346.0" prefWidth="600.0" spacing="10" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ParticipantController">
    <!-- Reduced padding for the main VBox -->
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <!-- Header -->
    <Label style="-fx-font-weight: bold; -fx-text-fill: #2a2a2a;" text="Participant Dashboard">
        <!-- Reduced font size from 24 to 20 -->
        <font>
            <Font name="System Bold" size="20" />
        </font>
    </Label>

    <!-- User Info Section -->
    <VBox spacing="5" style="-fx-background-color: #e8ecef; -fx-border-color: #d3d3d3; -fx-border-radius: 8; -fx-padding: 10;">
        <!-- Reduced spacing and padding -->
        <Label fx:id="welcomeLabel" style="-fx-font-weight: bold;" text="Welcome, [User]">
            <!-- Reduced font size from 18 to 16 -->
            <font>
                <Font size="16" />
            </font>
        </Label>
        <GridPane alignment="CENTER" hgap="8" vgap="5">
            <!-- Reduced hgap and vgap -->
            <!-- Nom -->
            <VBox spacing="2" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label style="-fx-font-weight: bold;" text="Nom:">
                    <!-- Reduced font size from 14 to 12 -->
                    <font>
                        <Font size="12" />
                    </font>
                </Label>
                <TextField fx:id="nomField" prefWidth="120" style="-fx-background-color: #ffffff; -fx-border-color: #d3d3d3; -fx-border-radius: 5;" text="[Nom]" />
                <!-- Reduced prefWidth from 150 to 120 -->
            </VBox>
            <!-- Prénom -->
            <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label style="-fx-font-weight: bold;" text="Prénom:">
                    <font>
                        <Font size="12" />
                    </font>
                </Label>
                <TextField fx:id="prenomField" prefWidth="120" style="-fx-background-color: #ffffff; -fx-border-color: #d3d3d3; -fx-border-radius: 5;" text="[Prénom]" />
            </VBox>
            <!-- Email -->
            <VBox spacing="2" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label style="-fx-font-weight: bold;" text="Email:">
                    <font>
                        <Font size="12" />
                    </font>
                </Label>
                <TextField fx:id="emailField" prefWidth="120" style="-fx-background-color: #ffffff; -fx-border-color: #d3d3d3; -fx-border-radius: 5;" text="[Email]" />
            </VBox>
            <!-- Âge -->
            <VBox spacing="2" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <Label style="-fx-font-weight: bold;" text="Âge:">
                    <font>
                        <Font size="12" />
                    </font>
                </Label>
                <TextField fx:id="ageField" prefWidth="120" style="-fx-background-color: #ffffff; -fx-border-color: #d3d3d3; -fx-border-radius: 5;" text="[Âge]" />
            </VBox>
            <!-- Rôle -->
            <VBox spacing="2" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <Label style="-fx-font-weight: bold;" text="Rôle:">
                    <font>
                        <Font size="12" />
                    </font>
                </Label>
                <TextField fx:id="roleField" prefWidth="120" style="-fx-background-color: #ffffff; -fx-border-color: #d3d3d3; -fx-border-radius: 5;" text="[Rôle]" />
            </VBox>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </VBox>

    <!-- Action Buttons -->
    <VBox alignment="CENTER" spacing="5">
        <!-- Reduced spacing -->
        <Button fx:id="updateButton" onAction="#handleUpdate" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 10; -fx-border-radius: 5;" text="Update" />
        <!-- Reduced padding -->
        <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 10; -fx-border-radius: 5;" text="Logout" />
    </VBox>


</VBox>
