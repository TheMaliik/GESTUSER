<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ChartController">
    <children>
        <!-- BarChart with adjusted properties for alignment -->
        <BarChart fx:id="barChart" layoutX="50.0" layoutY="100.0" prefHeight="400.0" prefWidth="700.0" title="User Role Distribution" barGap="2.0" categoryGap="10.0">
            <xAxis>
                <CategoryAxis fx:id="xAxis" label="Role Categories" tickLabelRotation="0.0" tickLabelGap="5.0" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" label="Number of Users" autoRanging="true" tickUnit="1" />
            </yAxis>
            <opaqueInsets>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </opaqueInsets>
        </BarChart>

        <!-- Title text -->
        <Text layoutX="15.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="User Role Statistics">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Text>

        <!-- Back button -->
        <Button layoutX="700.0" layoutY="30.0" mnemonicParsing="false" onAction="#goBackHandler" text="Back" styleClass="back-button" prefHeight="30.0" prefWidth="80.0">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
    </children>
    <stylesheets>
        <URL value="@/BarChart.css" />
    </stylesheets>
</AnchorPane>